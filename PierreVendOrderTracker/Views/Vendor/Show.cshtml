@{
  Layout = "_Layout";
}
@using PierreVendOrderTracker.Models;

<h3>Here are all the orders for: @Model["vendor"].Name</h3>

<ol>
  @foreach (Order order in @Model["orders"])
  {

    <li>@order.Title @order.Description @order.Dt.ToShortDateString() @string.Format("{0:C}", @order.Price)</li>

  }

</ol>

<p><a href='/vendors/@Model["vendor"].Id/orders/new'>Add a new order</a></p>
<p><a href='/vendors'>Return to vendor list</a></p>
<p><a href='/'>Return to Home Page</a></p>

